<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!--https://weblogs.asp.net/podwysocki/ioc-and-the-unity-application-block-once-again-->
  <configSections>
    <section name="unity" type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection, Unity.Configuration" />
  </configSections>

  <unity>
    <containers>
      <container>
        <!--<register type="PubSubSample.Common.Encryption.IEncryption,PubSubSample.Common" mapTo="PubSubSample.Common.Encryption.SimpleEncryption,PubSubSample.Common" />
        <register type="PubSubSample.PubSubServer.PubSubServer,PubSubSample.PubSubServer" mapTo="PubSubSample.PubSubServer.PubSubServer,PubSubSample.PubSubServer" />-->
        <type type="PubSubSample.Common.Proxy.IProxyManager,PubSubSample.Common" mapTo="PubSubSample.Common.Proxy.ProxyManager,PubSubSample.Common">
          <lifetime type="singleton" />
        </type>
        <type type="PubSubSample.Foundation.Contracts.IPubSubFilter,PubSubSample.Foundation" mapTo="PubSubSample.PubSubServer.PubSubFilter,PubSubSample.PubSubServer">
          <lifetime type="singleton" />
        </type>
        <types>
          <type type="PubSubSample.Common.Encryption.IEncryption,PubSubSample.Common" mapTo="PubSubSample.Common.Encryption.SimpleEncryption,PubSubSample.Common">
            <lifetime type="singleton" />
          </type>
          <type type="PubSubSample.PubSubServer.PubSubServer,PubSubSample.PubSubServer" mapTo="PubSubSample.PubSubServer.PubSubServer,PubSubSample.PubSubServer" />
        </types>
      </container>
    </containers>

  </unity>


  <appSettings>
    <add key="PubEndpointAddress" value="net.tcp://localhost:7001/Pub" />
    <add key="SubEndpointAddress" value="net.tcp://localhost:7002/Sub" />
  </appSettings>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" /></startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Unity.Abstractions" publicKeyToken="6d32ff45e0ccc69f" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-2.0.0.0" newVersion="2.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
